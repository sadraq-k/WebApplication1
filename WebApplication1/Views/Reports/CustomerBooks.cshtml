@model List<WebApplication1.Models.Book>
@{
    ViewData["Title"] = "Customer Book Requests";
}

<div class="container mt-4">
    <h2>📚 Search Books by Customer Name</h2>

    <!-- Search Form -->
    <form method="post" class="mt-4">
        <div class="mb-3">
            <label for="customerName" class="form-label">Enter Customer Name:</label>
            <input type="text" class="form-control" id="customerName" name="customerName" 
                   placeholder="e.g., Ali Ahmadi" required>
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    <hr />

    <!-- Messages -->
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info">
            @ViewBag.Message
        </div>

        @if (ViewBag.AllCustomers != null)
        {
            <h5>Available customers:</h5>
            <ul>
                @foreach (var c in ViewBag.AllCustomers)
                {
                    <li>@c.Name</li>
                }
            </ul>
        }
    }

    <!-- Results Table -->
    @if (Model != null && Model.Count > 0)
    {
        <h4>Books requested by: <strong>@ViewBag.CustomerName</strong></h4>

        <table class="table table-striped table-bordered mt-3">
            <thead class="table-dark">
                <tr>
                    <th>Book Name</th>
                    <th>Description</th>
                    <th>Current Stock</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>@book.Name</td>
                        <td>@book.Description</td>
                        <td>
                            <span class="badge @(book.Inventory > 0 ? "bg-success" : "bg-danger")">
                                @book.Inventory copies
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="alert alert-success mt-3">
            <strong>Total books requested:</strong> @Model.Count
        </div>
    }
</div>