@model List<WebApplication1.Models.BookRequest>
@{
    ViewData["Title"] = "All Book Requests";
}

<div class="container mt-4">
    <h2>📋 All Book Requests</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Request ID</th>
                <th>Customer Name</th>
                <th>Book Name</th>
                <th>Request Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.Id</td>
                    <td>@request.Customer.Name</td>
                    <td>@request.Book.Name</td>
                    <td>@request.RequestDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>

    <p class="text-muted">Total Requests: @Model.Count</p>
</div>