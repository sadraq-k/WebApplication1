@model List<WebApplication1.Models.Customer>
@{
    ViewData["Title"] = "Isfahan Customers";
}

<div class="container mt-4">
    <h2>👥 Customers from Isfahan (Age > 10)</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="4" class="text-center">No customers found</td>
                </tr>
            }
            else
            {
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.Id</td>
                        <td>@customer.Name</td>
                        <td>@customer.Age years</td>
                        <td>@customer.Address</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <p class="text-muted">Total: @Model.Count customers</p>
</div>
