@model List<WebApplication1.Models.Car>
@{
    ViewData["Title"] = "All Cars";
}

<div class="container mt-4">
    <h2>🚗 All Registered Cars</h2>

    <div class="mb-3">
        <a href="/Car/Register" class="btn btn-primary">Register New Car</a>
        <a href="/Car/GenerateSampleData" class="btn btn-success">Generate 10 Sample Cars</a>
    </div>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">
            @ViewBag.Message
        </div>
    }

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Car ID</th>
                <th>Car Name</th>
                <th>Owner Name</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="3" class="text-center">
                        No cars registered yet.
                        <a href="/Car/GenerateSampleData">Click here to generate sample data</a>
                    </td>
                </tr>
            }
            else
            {
                @foreach (var car in Model)
                {
                    <tr>
                        <td>@car.CarId</td>
                        <td>@car.CarName</td>
                        <td>@car.OwnerName</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <p class="text-muted">Total Cars: @Model.Count</p>
</div>